<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<!-- JDBC Database connection settings -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/spring_tutorials</property>
		<property name="hibernate.connection.username">admin</property>
		<property name="hibernate.connection.password">password</property>

		<!-- Specify dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

		<!-- Echo all executed statements to stdout -->
		<property name="hibernate.show_sql">true</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Mention annotated class -->
		<!-- <mapping class="com.excelr.entity.e2.Employee2" /> <mapping class="com.excelr.entity.e2.Regular_Employee2" 
			/> <mapping class="com.excelr.entity.e2.Contract_Employee2" /> -->
		<mapping class="com.excelr.entity.e3.Employee3" />
		<mapping class="com.excelr.entity.e3.Regular_Employee3" />
		<mapping class="com.excelr.entity.e3.Contract_Employee3" />
		
		<mapping class="com.excelr.entity.e4.Employee4" />
		<mapping class="com.excelr.entity.e4.Regular_Employee4" />
		<mapping class="com.excelr.entity.e4.Contract_Employee4" />

		<mapping resource="user.hbm.xml" />
		<mapping resource="employee.hbm.xml" />
		<!-- Alternatively, you can use <mapping class="com.example.YourEntityClass"/> 
			for annotated classes -->

	</session-factory>
</hibernate-configuration>
